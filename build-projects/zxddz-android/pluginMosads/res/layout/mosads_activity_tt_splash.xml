<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.mosads.adslib.Splash.MosSplashActivity">

    <FrameLayout
        android:id="@+id/mosads_tt_splash_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_above="@id/mosads_splash_app_logo"
        >
    </FrameLayout>

    <!-- 1.Logo区域：展示半开屏广告时使用，如果想展示全开屏广告，可以不需要这个Logo区域 -->
    <ImageView
        android:id="@+id/mosads_splash_app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/gdtslogan"
        android:src="@drawable/mosads_gdt_splash_logo" />

</RelativeLayout>
