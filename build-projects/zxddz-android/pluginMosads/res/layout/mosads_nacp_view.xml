<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:id="@+id/mosads_nacp_nativeADContainer"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/mosads_nacp_native_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250dp"
        android:onClick="onClick"
        android:clickable="true" >
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/mosads_nacp_img_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/mosads_nacp_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/mosads_nacp_img_logo"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/mosads_nacp_img_logo"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/mosads_nacp_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mosads_nacp_text_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/mosads_nacp_img_logo"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#A0000000" />

        <TextView
            android:id="@+id/mosads_nacp_text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mosads_nacp_text_desc"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/mosads_nacp_img_logo"
            android:textColor="#A0000000" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:minHeight="180dp"
            android:layout_below="@id/mosads_nacp_text_status"
            >
            <ImageView
                android:id="@+id/mosads_nacp_img_poster"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:minHeight="180dp"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/mosads_nacp_tsa_ad_logo"
                android:layout_width="62dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/mosads_nacp_img_poster"
                android:background="@drawable/mosads_tsa_ad_logo" />
        </RelativeLayout>
        <ImageButton
            android:id="@+id/mosads_nacp_addialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/mosads_cpimgclose" />
    </RelativeLayout>

</LinearLayout>